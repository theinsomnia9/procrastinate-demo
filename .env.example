# Database Configuration
DATABASE_URL=postgresql+asyncpg://procrastinate:procrastinate@localhost:5432/procrastinate_db
PROCRASTINATE_DATABASE_URL=postgresql://procrastinate:procrastinate@localhost:5432/procrastinate_db

# External API Configuration
API_BASE_URL=https://api.chucknorris.io

# Retry Strategy Configuration
MAX_RETRIES=5                    # Maximum retry attempts per task
RETRY_BASE_DELAY=2.0            # Base delay in seconds for exponential backoff
RETRY_MAX_DELAY=300.0           # Maximum delay cap in seconds (5 minutes)

# Job Timeout Configuration
JOB_TIMEOUT=300                 # Maximum time a job can run (5 minutes)

# Worker Configuration
WORKER_CONCURRENCY=10           # Number of concurrent jobs per worker
WORKER_TIMEOUT=30               # Graceful shutdown timeout in seconds

# Stalled Job Detection
STALLED_JOB_CHECK_INTERVAL=10   # Check interval in minutes (cron: */10)
STALLED_JOB_THRESHOLD=600       # Consider job stalled after 10 minutes
